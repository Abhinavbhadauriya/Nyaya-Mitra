

<h2 class="mb-4">Add New Law</h2>

<form action="/laws" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Law Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="mb-3">
    <label for="act_number" class="form-label">Act Number</label>
    <input type="text" class="form-control" id="act_number" name="act_number" required>
  </div>

  <div class="mb-3">
    <label for="category" class="form-label">Category</label>
    <input type="text" class="form-control" id="category" name="category" required>
  </div>

  <hr>

  <h4>Sections</h4>
  <div id="sections-container">
    <div class="section mb-3 border p-3">
      <div class="mb-2">
        <label class="form-label">Section Number</label>
        <input type="text" class="form-control" name="sections[0][section_number]" required>
      </div>

      <div class="mb-2">
        <label class="form-label">Section Title</label>
        <input type="text" class="form-control" name="sections[0][section_title]" required>
      </div>

      <div class="mb-2">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="sections[0][description]" rows="2" required></textarea>
      </div>

      <div class="mb-2">
        <label class="form-label">Penalties (comma separated)</label>
        <input type="text" class="form-control" name="sections[0][penalties]">
      </div>

      <div class="mb-2">
        <label class="form-label">Keywords (comma separated)</label>
        <input type="text" class="form-control" name="sections[0][keywords]">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Add Law</button>
</form>
